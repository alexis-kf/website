<?php

/**
 * @file
 * Contains ignite_hero methods.
 */

use Drupal\block_content\Entity\BlockContent;
use Drupal\media\Entity\Media;

/**
 * Implements hook_ignite_demo_block().
 */
function ignite_hero_ignite_demo_block() {
  $data = file_get_contents('https://source.unsplash.com/FIKD9t5_5zQ/1400x787');
  $file = \Drupal::service('file.repository')->writeData($data, 'public://hero.jpg');
  $media = Media::create([
    'bundle' => 'image',
    'name' => 'Hero Image',
    'field_image' => [
      'target_id' => $file->id(),
      'alt' => 'Hero Image',
      'title' => 'Hero Image',
    ],
  ]);

  $media->save();

  $block = BlockContent::create([
    'type' => 'hero',
    'field_eyebrow' => 'Eyebrow could be here',
    'field_link' => [
      'uri' => 'https://www.drupal.org',
      'title' => 'Learn more',
    ],
    'field_media' => [
      'target_id' => $media->id(),
    ],
    'field_summary' => 'Some sites need a tagline mauris ac dui sit amet sem facilisis finibus vitae et mi.',
  ]);

  $block->save();

  return $block;
}
