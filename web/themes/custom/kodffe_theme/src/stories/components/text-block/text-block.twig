{{ attach_library('kodffe_theme/text-block') }}

{% if body_text %}
  <div class="row">
    <div class="col-lg-10">
      {% if heading %}
        {%
          include '@kodffe_theme/heading/heading.twig' with {
            "heading": heading
          } only
        %}
      {% endif %}
      {%
        include '@kodffe_theme/rich-text/rich-text.twig' with {
          body_text: body_text,
        } only
      %}
      {% if link.url %}
        <div class="mt-3">
          {% include '@kodffe_theme/button/button.twig' with {
            "button": {
              "url": link.url,
              "text": link.text ? link.text : 'Read more'|t,
              "icon": '',
              "modifier": 'btn-outline-primary',
            }
          } only %}
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}
